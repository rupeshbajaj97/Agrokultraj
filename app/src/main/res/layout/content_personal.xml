<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"> <!--IMPORTANT otherwise backgrnd img. will not fill the whole screen -->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >



        <TextView
            android:id="@+id/tvPersInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Info"
            android:textSize="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/tvUserName"
            android:layout_alignStart="@+id/tvUserName" />

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="93dp"
            android:layout_height="79dp"
            android:background="@android:drawable/ic_input_add"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"
            android:layout_below="@+id/tvPersInfo"
            android:layout_toRightOf="@+id/tvFirstName"
            android:layout_toEndOf="@+id/tvFirstName" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/imgProfile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tvFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FirstName"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/tvUserName"
            android:layout_alignLeft="@+id/tvUserName"
            android:layout_alignStart="@+id/tvUserName" />

        <TextView
            android:id="@+id/tvMiddleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvLastName"
            android:layout_alignStart="@+id/tvLastName"
            android:layout_below="@+id/tvFirstName"
            android:layout_marginTop="21dp"
            android:text="Middle Name" />

        <TextView
            android:id="@+id/tvLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/tvMiddleName"
            android:layout_alignLeft="@+id/tvFirstName"
            android:layout_alignStart="@+id/tvFirstName" />

        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvLastName"
            android:layout_alignStart="@+id/tvLastName"
            android:layout_below="@+id/tvLastName"
            android:layout_marginTop="19dp"
            android:text="Ph. Number" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvPhoneNumber"
            android:layout_alignStart="@+id/tvPhoneNumber"
            android:layout_below="@+id/tvPhoneNumber"
            android:layout_marginTop="17dp"
            android:text="Email" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvEmail"
            android:layout_alignStart="@+id/tvEmail"
            android:layout_below="@+id/tvEmail"
            android:layout_marginTop="17dp"
            android:text="Address" />

        <TextView
            android:id="@+id/tvDOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvAddress"
            android:layout_alignStart="@+id/tvAddress"
            android:layout_below="@+id/tvAddress"
            android:layout_marginTop="14dp"
            android:text="D.O.B" />

        <TextView
            android:id="@+id/tvCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvDOB"
            android:layout_alignStart="@+id/tvDOB"
            android:layout_below="@+id/tvDOB"
            android:layout_marginTop="15dp"
            android:text="Company" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_below="@+id/tvCompany"
            android:layout_alignLeft="@+id/tvCompany"
            android:layout_alignStart="@+id/tvCompany"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tvWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website"
            android:layout_below="@+id/etTitle"
            android:layout_alignRight="@+id/tvAddress"
            android:layout_alignEnd="@+id/tvAddress" />

        <ImageButton
            android:id="@+id/imgEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_edit"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvUserName"
            android:layout_alignBottom="@+id/tvUserName"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter UserName" />

        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvUserName"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter your First Name"
            android:layout_alignBaseline="@id/tvFirstName"
            android:layout_alignBottom="@id/tvFirstName"/>

        <EditText
            android:id="@+id/etMiddleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter your middle Name"
            android:layout_alignBaseline="@+id/tvMiddleName"
            android:layout_alignBottom="@+id/tvMiddleName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:id="@+id/etLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/etMiddleName"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter your Last Name"
            android:layout_alignBottom="@id/tvLastName"
            android:layout_alignBaseline="@id/tvLastName"/>

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etLastName"
            android:layout_alignStart="@+id/etLastName"
            android:layout_below="@+id/etLastName"
            android:ems="10"
            android:inputType="phone"
            android:hint="Please Enter your Phone Number"
            android:layout_alignBaseline="@id/tvPhoneNumber"
            android:layout_alignBottom="@id/tvPhoneNumber"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etPhoneNumber"
            android:layout_alignStart="@+id/etPhoneNumber"
            android:layout_below="@+id/tvPhoneNumber"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Enter your Email Id"
            android:layout_alignBottom="@id/tvEmail"
            android:layout_alignBaseline="@id/tvEmail"/>

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etEmail"
            android:layout_alignStart="@+id/etEmail"
            android:layout_below="@+id/tvEmail"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:hint="Enter your address"
            android:layout_alignBaseline="@id/tvAddress"
            android:layout_alignBottom="@id/tvAddress"/>

        <EditText
            android:id="@+id/etDOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:layout_below="@+id/tvAddress"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:id="@+id/etCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter your companny Name"
            android:layout_alignBaseline="@+id/tvCompany"
            android:layout_alignBottom="@+id/tvCompany"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter Title"
            android:layout_alignBaseline="@+id/tvTitle"
            android:layout_alignBottom="@+id/tvTitle"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:id="@+id/etWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter the website"
            android:layout_alignBaseline="@+id/tvWebsite"
            android:layout_alignBottom="@+id/tvWebsite"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</ScrollView>
